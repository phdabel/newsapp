<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextGeneral">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsTitle" parent="TextGeneral">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SectionLabel" parent="TextGeneral">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="TextGeneralRightAlignment" parent="TextGeneral">
        <item name="android:gravity">end</item>
    </style>

    <style name="NewsItemLayout">
        <item name="android:background">@color/colorSecondaryLight</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
